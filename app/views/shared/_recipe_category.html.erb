<style>


.recipe-card {
  display: inline;
  height: 200px;
  width: 450px;
  background-color: white;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  border-radius: 4px;
  margin-right: 15px;
  flex-shrink: 0;
  overflow: hidden;
  margin: 10px;
}

.recipe-card-content {
  display: flex;
  width: 100%;
  height: 100%;
}

.recipe-card-title {
  color: white;
  padding: 10px;

}



</style>



                <% recipe = @recipe %>
                <div class="recipe-card overlay white" style="background:
    linear-gradient(
      rgba(0, 0, 0, 0.45),
      rgba(0, 0, 0, 0)
    ), url(<%=recipe.photo%>); background-size: cover;">
                  <div class="recipe-card-content">
                    <h5 class="recipe-card-title"><div><%= recipe.producer.name %>'s<br><%= recipe.title%></div></h5>
                  </div>
                  <button class="info-button button5" onclick="toggleProduct(<%=recipe.id.to_s%>)">i</button>
                </div>


